<Page x:Class="WpfApp5.mainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="mainPage"
      Background="Gray"
      >

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height ="*" x:Name="enterrow"/>
            <RowDefinition Height ="*" x:Name="registerrow"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
          <TextBlock Text="sign in if you dont have an account" Background="Gray" Width="400" Height="40" TextElement.FontStyle="Italic" TextElement.FontSize="20">
                
          </TextBlock>

          <TextBlock Background="Gray" Width="200" Height="15" >
            <Hyperlink Click="enter">
                    register
            </Hyperlink>
          </TextBlock>
          <TextBlock Text="sign in if you dont have an account" Background="Gray" Width="400" Height="40" TextElement.FontStyle="Italic" TextElement.FontSize="20" Margin="50,50,50,50" >

          </TextBlock>
            <TextBlock Background="Gray" Width="200" Height="15" HorizontalAlignment="Center">
            <Hyperlink Click="register" >
                    enter
            </Hyperlink>

          </TextBlock>
        
        </StackPanel>

        

    </Grid>
</Page>
