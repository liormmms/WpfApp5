<Page x:Class="WpfApp5.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page4"
      Background="AntiqueWhite">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="*"/>
            <RowDefinition Height ="6*" />
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal">

            <ListBox  Background="White" BorderThickness="2" Width="266.66666667" x:Name="citybutton">
                <TextBlock Text="pick city" TextElement.FontSize="40" VerticalAlignment="Center"/>
            </ListBox>

            
        </StackPanel>
        <DataGrid x:Name="Listcar" Grid.Row="1" Width="400" Background="AntiqueWhite" AutoGenerateColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="model name"  />
            </DataGrid.Columns>
        </DataGrid>
        
            

        
    </Grid>
</Page>
