<Page x:Class="WpfApp5.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page4"
      Background="AntiqueWhite">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="*"/>
            <RowDefinition Height ="6*" />
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal">

            

            <ComboBox   Text="pick kind" IsReadOnly="True" Background="AntiqueWhite" BorderThickness="2" Width="266.6666667"  x:Name="kindbutton">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding StringFormat='.{0:p1}'}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox   Text="pick city" IsReadOnly="True" Background="AntiqueWhite" BorderThickness="2" Width="266.6666667"  x:Name="citybutton">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding StringFormat='.{0:p1}'}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox   Text="pick price range" IsReadOnly="True" Background="AntiqueWhite" BorderThickness="2" Width="266.6666667"  x:Name="pricebutton">
                <ComboBoxItem Content="20,000" MouseDoubleClick="ClickTwenty"/>
                <ComboBoxItem Content="50,000"/>
                <ComboBoxItem Content="50,000>"/>
            </ComboBox>
        </StackPanel>
        <DataGrid x:Name="Listcar" Grid.Row="1" Width="400" Background="AntiqueWhite" AutoGenerateColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="model name"  />
            </DataGrid.Columns>
        </DataGrid>
        
            

        
    </Grid>
</Page>
