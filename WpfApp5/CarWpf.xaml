<Page x:Class="WpfApp5.CarWpf"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CarWpf">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.65*"/>
            <RowDefinition Height="1.2*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right">
                <TextBlock Text="seller" Width="113" Height="30" TextElement.FontSize="15" />
                <TextBlock Width="100" Height="30" TextElement.FontStyle="Italic" TextElement.Foreground="Gray"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right">
                <TextBlock Text="brand" Width="114" Height="30" TextElement.FontSize="15" />
                <TextBlock Width="100" Height="30" TextElement.FontStyle="Italic" TextElement.Foreground="Gray"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right">
                <TextBlock Text="kind" Width="114" Height="30" TextElement.FontSize="15" />
                <TextBlock Width="100" Height="30" TextElement.FontStyle="Italic" TextElement.Foreground="Gray"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right">
                <TextBlock Text="city" Width="114" Height="30" TextElement.FontSize="15" />
                <TextBlock Width="100" Height="30" TextElement.FontStyle="Italic" TextElement.Foreground="Gray"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right">
                <TextBlock Text="km" Width="114" Height="30" TextElement.FontSize="15" />
                <TextBlock Width="100" Height="30" TextElement.FontStyle="Italic" TextElement.Foreground="Gray"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right">
            <TextBlock Text="price" Width="114" Height="30" TextElement.FontSize="15" />
                <TextBlock Width="100" Height="30" TextElement.FontStyle="Italic" TextElement.Foreground="Gray"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right">
                <TextBlock Text="modelname" Width="114" Height="30" TextElement.FontSize="15" />
                <TextBlock Width="100" Height="30" TextElement.FontStyle="Italic" TextElement.Foreground="Gray" x:Name="ModelText"/>
            </StackPanel>
            
        </StackPanel>


    </Grid>
</Page>
